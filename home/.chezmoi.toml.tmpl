{{/* boolean feature tags */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $taf := false -}}{{/* true if this machine is used for taf */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- $live_ubuntu := false -}}{{/* true if this machine is a live ubuntu session */}}
{{- "" -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "Jonathan MacBook PRO" -}}
{{-     $hostname = "joroy-mbp" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}

{{- if stat "/cdrom/casper" }}
{{-   $live_ubuntu = true -}}
{{-   $ephemeral = false -}}
{{-   $headless = false -}}
{{- end }}

{{- if not $ephemeral -}}
{{-   if eq $hostname "joroy-mbp" -}}
{{-     $taf = true -}}
{{-   else if eq $hostname "raspberrypi4" -}}
{{-     $headless = true -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "manic5" -}}
{{-     $personal = true -}}
{{-   else if $live_ubuntu -}}
{{-     $headless = false -}}
{{-     $ephemeral = false -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

{{- $email := promptStringOnce . "email" "Email address" -}}

[data]
    ephemeral = {{ $ephemeral }}
    email = {{ $email | quote }}
    taf = {{ $taf }}
    headless = {{ $headless }}
    hostname = {{ $hostname | quote }}
    personal = {{ $personal }}
    osid = {{ $osID | quote }}
    live_ubuntu = {{ $live_ubuntu }}	

[github]
    refreshPeriod = "12h"
